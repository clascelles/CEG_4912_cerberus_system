<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:util="http://www.springframework.org/schema/util"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd">


	<bean id="startServerTask" class="com.cerberus.bootstrap.CerberusServerBootstrap" />

	<!-- Spring Quartz -->
	<bean name="startDaemonServerJob" class="org.springframework.scheduling.quartz.JobDetailBean">

		<property name="jobClass" value="com.cerberus.bootstrap.StartDaemonServerJob" />

		<property name="jobDataAsMap">
			<map>
				<entry key="startServerTask" value-ref="startServerTask" />
			</map>
		</property>

	</bean>

	<bean id="simpleTrigger" class="org.springframework.scheduling.quartz.SimpleTriggerBean">

		<property name="jobDetail" ref="startDaemonServerJob" />
		<property name="repeatCount" value="0" />
		<property name="repeatInterval" value="0" />


	</bean>

	<!-- Cron Trigger, example -->
	<!-- <bean id="cronTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">

		<property name="jobDetail" ref="runMeJob" />
		<property name="cronExpression" value="0/5 * * * * ?" />

	</bean>-->

	<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="jobDetails">
			<list>
				<ref bean="startDaemonServerJob" />
			</list>
		</property>

		<property name="triggers">
			<list>
				<ref bean="simpleTrigger" />
			</list>
		</property>
	</bean>

</beans>