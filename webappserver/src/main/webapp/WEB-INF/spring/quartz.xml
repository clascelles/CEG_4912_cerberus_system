<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:util="http://www.springframework.org/schema/util"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd">


	<!-- Spring Quartz -->
	
	<!-- START DAEMON SERVER -->
	<bean name="startDaemonServerJob" class="org.springframework.scheduling.quartz.JobDetailBean">
		<property name="jobClass" value="com.cerberus.frameworks.quartz.StartDaemonServerJob" />
	</bean>
	
	<!-- START DATA AGGREGATION TASK -->
	<bean name="dataAggregationJob" class="org.springframework.scheduling.quartz.JobDetailBean">
		<property name="jobClass" value="com.cerberus.frameworks.quartz.DataAggregationJob" />
	</bean>
	
	<!-- START EVENT SCHEDULING TASK -->
	<bean name="eventSchedulingJob" class="org.springframework.scheduling.quartz.JobDetailBean">
		<property name="jobClass" value="com.cerberus.frameworks.quartz.EventSchedulingJob" />
	</bean>

	<!-- Only once all server startup -->
	<bean id="simpleTriggerDaemon" class="org.springframework.scheduling.quartz.SimpleTriggerBean">
		<property name="jobDetail" ref="startDaemonServerJob" />
		<property name="repeatCount" value="0" />
		<property name="repeatInterval" value="0" />
	</bean>
	
	<!-- Every 15 seconds -->
	<bean id="simpleTriggerData" class="org.springframework.scheduling.quartz.SimpleTriggerBean">
		<property name="jobDetail" ref="dataAggregationJob" />
		<property name="repeatCount" value="0" />
		<property name="repeatInterval" value="0" />
	</bean>
	
	<!-- Every 15 seconds -->
	<bean id="simpleTriggerEvent" class="org.springframework.scheduling.quartz.SimpleTriggerBean">
		<property name="jobDetail" ref="eventSchedulingJob" />
		<property name="repeatCount" value="0" />
		<property name="repeatInterval" value="0" />
	</bean>

	<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="jobDetails">
			<list>
				<ref bean="startDaemonServerJob" />
				<ref bean="dataAggregationJob" />
				<!-- <ref bean="eventSchedulingJob" />-->
			</list>
		</property>

		<property name="triggers">
			<list>
				<ref bean="simpleTriggerDaemon" />
				<ref bean="simpleTriggerData" />
			<!-- <ref bean="simpleTriggerEvent" />-->
			</list>
		</property>
	</bean>

</beans>