<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:util="http://www.springframework.org/schema/util"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd">


	<!-- Initiating a HashMap -->
	<util:map id="bin"></util:map>


	<!-- Initiating all the controllers -->
	<bean id="loginController" class="com.cerberus.module.account.controllers.LoginController"></bean>
	<bean id="accountController" class="com.cerberus.module.account.controllers.AccountController"></bean>
	<bean id="newAccountController" class="com.cerberus.module.account.controllers.NewAccountController"></bean>
	<bean id="overviewController" class="com.cerberus.module.overview.controllers.OverviewController"></bean>
	<bean id="outletController" class="com.cerberus.module.outlets.controllers.OutletController"></bean>
	<bean id="scheduleController" class="com.cerberus.module.schedules.controllers.ScheduleController"></bean>
	<bean id="securityController" class="com.cerberus.module.security.controllers.SecurityController"></bean>
	<bean id="systemController" class="com.cerberus.module.system.controllers.SystemController"></bean>
	<bean id="usageController" class="com.cerberus.module.usage.controllers.UsageController"></bean>
	
</beans>