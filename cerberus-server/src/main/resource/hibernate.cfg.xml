<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">root</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/cerberus</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLInnoDBDialect</property>
        <property name="hibernate.current_session_context_class">org.hibernate.context.internal.ThreadLocalSessionContext</property>
        <property name="show_sql">false</property>
        
        <property name="hibernate.c3p0.min_size">5</property>
		<property name="hibernate.c3p0.max_size">20</property>
		<property name="hibernate.c3p0.timeout">300</property>
		<property name="hibernate.c3p0.max_statements">50</property>
		<property name="hibernate.c3p0.idle_test_period">300</property> 
		<property name="hibernate.c3p0.acquire_increment">1</property>

        <mapping class="com.cerberus.server.persistence.beans.ConnectionEvent"></mapping>
        <mapping class="com.cerberus.server.persistence.beans.ConsumptionProfile"></mapping>
        <mapping class="com.cerberus.server.persistence.beans.Current"></mapping>
        <mapping class="com.cerberus.server.persistence.beans.Event"></mapping>
        <mapping class="com.cerberus.server.persistence.beans.GeneralProfile"></mapping>
        <mapping class="com.cerberus.server.persistence.beans.Login"></mapping>
        <mapping class="com.cerberus.server.persistence.beans.Outlet"></mapping>
        <mapping class="com.cerberus.server.persistence.beans.OutletOperationMode"></mapping>
        <mapping class="com.cerberus.server.persistence.beans.PersonalInformation"></mapping>
        <mapping class="com.cerberus.server.persistence.beans.RfidAuthentication"></mapping>
        <mapping class="com.cerberus.server.persistence.beans.RfidTag"></mapping>
        <mapping class="com.cerberus.server.persistence.beans.Room"></mapping>
        <mapping class="com.cerberus.server.persistence.beans.RoomType"></mapping>
        <mapping class="com.cerberus.server.persistence.beans.Rule"></mapping>
        <mapping class="com.cerberus.server.persistence.beans.RuleTipXref"></mapping>
        <mapping class="com.cerberus.server.persistence.beans.ScheduleEndMode"></mapping>
        <mapping class="com.cerberus.server.persistence.beans.ScheduleStartMode"></mapping>
        <mapping class="com.cerberus.server.persistence.beans.Socket"></mapping>
        <mapping class="com.cerberus.server.persistence.beans.SocketAssignment"></mapping>
        <mapping class="com.cerberus.server.persistence.beans.SocketOperationMode"></mapping>
        <mapping class="com.cerberus.server.persistence.beans.SocketOperationStatus"></mapping>
        <mapping class="com.cerberus.server.persistence.beans.System"></mapping>
        <mapping class="com.cerberus.server.persistence.beans.Tip"></mapping>
        <mapping class="com.cerberus.server.persistence.beans.User"></mapping>
        <mapping class="com.cerberus.server.persistence.beans.UserSetting"></mapping>
        <mapping class="com.cerberus.server.persistence.beans.UserType"></mapping>
        
        
    </session-factory>
</hibernate-configuration>
